@model Login
@{
    ViewData["Title"] = "Login";
}

<div class="bg-primary pt-1 pb-1">
    <div class="text-center" style="color:beige; font-size: 28px">Zaloguj się na swoje konto</div>
</div>

<div class="container text-center">
    <div class="row">
        <form class=" col-md-6 mt-5 ml-auto mr-auto" asp-action="Login"
              asp-controller="Account" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group ml-auto mr-auto">
                <label asp-for="UserName">Nazwa użytkownika</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group ml-auto mr-auto">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg" asp-action="Login" asp-controller="Account">
                    Zaloguj się
                </button>
            </div>
        </form>
    </div>
</div>