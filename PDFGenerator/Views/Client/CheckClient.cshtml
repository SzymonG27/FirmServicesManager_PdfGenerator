@model ClientFixViewModel
@{ 
    ViewData["Title"] = "W poszukiwaniu klienta";
}

<div class="container text-center">
    <div class="row">
        <form asp-action="CheckClient" method="post" class="col-md-6 mt-5 ml-auto mr-auto">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group ml-auto mr-auto">
                <label asp-for="Client.FirstName">Wpisz imię</label>
                <input asp-for="Client.FirstName" class="form-control" />
            </div>
            <div class="form-group ml-auto mr-auto">
                <label asp-for="Client.SurName">Wpisz nazwisko</label>
                <input asp-for="Client.SurName" class="form-control" />
            </div>
            <div class="form-group ml-auto mr-auto">
                <label asp-for="Client.PhoneNumber">Wpisz numer telefonu</label>
                <input asp-for="Client.PhoneNumber" class="form-control" />
            </div>
            <div class="text-center ml-auto mr-auto">
                <button type="submit" class="btn btn-primary btn-lg">
                    Przejdź dalej
                </button>
            </div>
            <div class="text-center">
                Klient nie istnieje? Stwórz mu rekord <a asp-action="CreateClient" asp-controller="Client">Tutaj</a>
            </div>
        </form>
    </div>
</div>

